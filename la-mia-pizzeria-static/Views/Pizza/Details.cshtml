@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli pizze</h1>
            </div>
            <div class="pizza-single-image-container">
                <img src="@Model.Foto">
            </div>
            <p>
                <strong>Nome:</strong>
                @Model.Nome
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Descrizione
            </p>
            <p>
                <strong>Toppings:</strong>
                @foreach (Topping topping in Model.Toppings)
                {
                    <div>
                        <label>@topping.Name</label>
                    </div>
                }
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Prezzo
            </p>
            <p>
                <strong>Categoria:</strong>
                @Model.Category.Titolo
            </p>
        </div>
    </div>
</div>
